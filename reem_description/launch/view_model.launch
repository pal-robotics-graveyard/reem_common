<!--
  Visualise the REEM robot model using RViz
 -->
<launch>
  <param name="use_gui" value="true"/>
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find reem_description)/robots/reem.urdf.xacro'"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find reem_description)/rviz/view_model.rviz"/>
</launch>
